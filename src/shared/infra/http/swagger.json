{
  "openapi":"3.0.2",
  "info": {
    "title":"Go Commerce",
    "version":"1.0",
    "license": {
      "name": "MIT",
      "url": "https://github.com/DiegoVictor/gocommerce/blob/master/LICENSE"
    }
  },
  "servers": [
    {
      "url":"http://localhost:3333/v1"
    }
  ],
  "paths": {
    "/customers": {
      "post": {
        "tags": ["Customers"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email"
                ],
                "title": "Customer",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              },
              "example": {
                "name": "John Doe",
                "email": "johndoe@example.com"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create a new customer",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Customer"
                },
                "example": {
                  "id": "51450dc5-7647-4fa7-877b-fe98e78c2a6c",
                  "name": "John Doe",
                  "email": "johndoe@example.com",
                  "created_at": "2021-09-01T03:10:41.705Z",
                  "updated_at": "2021-09-01T03:10:41.705Z"
                }
              }
            }
          },
          "400": {
            "description": "The email provided already in use",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "status": "error",
                  "message": "The email provided already in use",
                  "code": 140,
                  "docs": "https://github.com/DiegoVictor/gocommerce#errors-reference"
                }
              }
            }
          }
        }
      }
    },
    "/customers/{id}": {
      "get": {
        "tags": ["Customers"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "51450dc5-7647-4fa7-877b-fe98e78c2a6c"
          }
        ],
        "responses": {
          "200": {
            "description": "Return one customer",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Customer"
                    },
                    {
                      "title": "Customer",
                      "properties": {
                        "url": {
                          "type": "string"
                        }
                      }
                    }
                  ]
                },
                "example": {
                  "id": "51450dc5-7647-4fa7-877b-fe98e78c2a6c",
                  "name": "John Doe",
                  "email": "johndoe@example.com",
                  "created_at": "2021-09-01T03:10:41.705Z",
                  "updated_at": "2021-09-01T03:10:41.705Z",
                  "url": "http://localhost:3333/v1/customers/51450dc5-7647-4fa7-877b-fe98e78c2a6c"
                }
              }
            }
          },
          "404": {
            "description": "Customer not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "status": "error",
                  "message": "Customer not found",
                  "code": 144,
                  "docs": "https://github.com/DiegoVictor/gocommerce#errors-reference"
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "post": {
        "tags": ["Products"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "price",
                  "quantity"
                ],
                "title": "Customer",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number"
                  },
                  "quantity": {
                    "type": "integer"
                  }
                }
              },
              "example": {
                "name": "Hocks Ibiza",
                "price": 280.90,
                "quantity": 100
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Create a new product",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                },
                "example": {
                  "id": "dee8bd5a-cfc3-40e2-a5f2-bcac1533f5ed",
                  "name": "Hocks Ibiza",
                  "price": 280.9,
                  "quantity": 100,
                  "created_at": "2021-09-01T03:19:14.364Z",
                  "updated_at": "2021-09-01T03:19:14.364Z"
                }
              }
            }
          },
          "409": {
            "description": "A product with the same name already exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "status": "error",
                  "message": "A product with the same name already exists",
                  "code": 349,
                  "docs": "https://github.com/DiegoVictor/gocommerce#errors-reference"
                }
              }
            }
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "tags": ["Products"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "dee8bd5a-cfc3-40e2-a5f2-bcac1533f5ed"
          }
        ],
        "responses": {
          "200": {
            "description": "Return one customer",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/Product"
                    },
                    {
                      "title": "Product",
                      "properties": {
                        "url": {
                          "type": "string"
                        }
                      }
                    }
                  ]
                },
                "example": {
                  "id": "dee8bd5a-cfc3-40e2-a5f2-bcac1533f5ed",
                  "name": "Hocks Ibiza",
                  "price": "280.90",
                  "quantity": 100,
                  "created_at": "2021-09-01T03:19:14.364Z",
                  "updated_at": "2021-09-01T03:19:14.364Z",
                  "url": "http://localhost:3333/v1/products/dee8bd5a-cfc3-40e2-a5f2-bcac1533f5ed"
                }
              }
            }
          },
          "404": {
            "description": "Customer not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "status": "error",
                  "message": "Product not found",
                  "code": 344,
                  "docs": "https://github.com/DiegoVictor/gocommerce#errors-reference"
                }
              }
            }
          }
        }
      }
    },
  },
  "components": {
    "schemas": {
      "Customer": {
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "Product": {
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "quantity": {
            "type": "integer"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "Order": {
        "properties": {
          "id": {
            "type": "string"
          },
          "customer_id": {
            "type": "string"
          },
          "customer": {
            "$ref": "#/components/schemas/Customer"
          },
          "order_products": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderProduct"
            }
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        }
      },
      "Error": {
        "properties": {
          "status": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "code": {
            "type": "integer"
          },
          "docs": {
            "type": "string"
          }
        }
      }
    }
  }
}
